# ---------- runtime ----------
ENV=dev

# ---------- database ----------
# 仅支持 MySQL（配合 docker-compose 一键拉起）
DATABASE_URL=mysql+pymysql://root:root@127.0.0.1:3306/growth_buddy?charset=utf8mb4

# ---------- auth (JWT + OTP) ----------
JWT_SECRET_KEY=please_change_me
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=14

SMS_FIXED_CODE=123456
OTP_TTL_SECONDS=300
OTP_SEND_INTERVAL_SECONDS=60
OTP_MAX_VERIFY_FAILS=5

# ---------- file storage ----------
FILE_BASE_PATH=./data

# ---------- LLM (optional; if empty, fallback to dummy) ----------
# deepseek | openai | ollama | dummy
LLM_DEFAULT_PROVIDER=deepseek

# DeepSeek (OpenAI-compatible)
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# OpenAI / ChatGPT (optional)
OPENAI_API_KEY=
# OPENAI_BASE_URL=  # leave empty for official OpenAI endpoint
OPENAI_MODEL=gpt-4o-mini

# Local Ollama (optional)
OLLAMA_BASE_URL=http://localhost:11434/v1
OLLAMA_MODEL=qwen2.5:7b-instruct

# ---------- iFlytek speech (required for TTS/ASR) ----------
XFYUN_APPID=
XFYUN_APIKEY=
XFYUN_APISECRET=

# ---------- S3 (optional; can be AWS or MinIO) ----------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_REGION=ap-southeast-1
AWS_S3_BUCKET=
# Base URL to access objects (e.g. https://<bucket>.s3.<region>.amazonaws.com)
AWS_S3_BASE_URL=
# Optional endpoint url (e.g. http://127.0.0.1:9000 for MinIO)
AWS_S3_ENDPOINT_URL=

# ---------- MQTT (optional) ----------
MQTT_BROKER_HOST=127.0.0.1
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID_PREFIX=yoo-gw-

# ---------- optional admin auth ----------
ADMIN_TOKEN=
